isbn = {1471-2954 (Electronic)$\backslash$n0962-8452 (Linking)},
issn = {0962-8452},
journal = {Proceedings. Biological sciences / The Royal Society},
keywords = {1,action,introduction,invertebrate,metaphysical concept of free,spontaneous,the rejection of the,volition,will},
month = dec,
number = {1707},
pages = {930--939},
pmid = {21159679},
title = {{Towards a scientific concept of free will as a biological trait: spontaneous actions and decision-making in invertebrates.}},
url = {http://rspb.royalsocietypublishing.org/cgi/doi/10.1098/rspb.2010.2325},
volume = {278},
